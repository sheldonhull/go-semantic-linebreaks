    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch test function",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.run",
                "TestFixViolations"
            ]
        },
        {
            "name": "Launch cmd with source input",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/go-semantic-linebreaks",
            "args": [
                "-debug",
                "-source",
                "test.md"
            ]
        }
    ]
}
